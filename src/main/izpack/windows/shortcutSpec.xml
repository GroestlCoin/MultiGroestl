<shortcuts> 
   <programGroup defaultName="MultiGroestl" location="applications"/> 
   <shortcut name="MultiGroestl" 
             target="$INSTALL_PATH/multigroestl.exe" 
             description="MultiGroestl" 
             workingDirectory="$INSTALL_PATH"
             iconFile="$INSTALL_PATH/multigroestl.ico" 
             initialState="normal" 
             programGroup="yes"
             desktop="yes" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
    <shortcut name="Uninstall MultiGroestl ${project.version}" 
             target="$INSTALL_PATH/uninstaller/uninstaller.jar" 
             description="Uninstall MultiGroestl" 
             initialState="normal" 
             programGroup="yes"
             desktop="no" 
             applications="no" 
             startMenu="no" 
             startup="no">
    </shortcut>
</shortcuts>